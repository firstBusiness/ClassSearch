 <div class="row">
  <h3>Class Search</h3>
   <div id="app"class="app-container">
     <div class="large-4 columns department-container">
      <ul class="common-list dept-list">
        <li v-transition class="dept-item" v-repeat="departments">
          <a class="dept-link" href="#" v-on="click: loadCourses(this)" value="{{tag}}">{{tag}} - {{name}}</a>
        </li>
      </ul>
     </div>

     <div class="large-4 columns animated fadeInRightBig course-container">
        <h5 v-show="courses.length == 0">
          There are no courses to be shown, please select another department.
        </h5>

       <ul v-transition class="common-list course-list">
         <li class="course-item" v-repeat="courses">
            <span class="course-number">{{course_num}}</span><br>

            <a v-ref="selected_course" class="course-link" v-on="click: loadSections(this)" href="#" value="{{course_num}}">
            {{title}}</a>
         </li>
       </ul>
     </div>

     <div class="animated fadeInRight large-4 columns section-container">

        <div v-with="selected_course" class="row">
          <h4>{{selected_course_name}} ({{selected_course_credits}})</h4>
          {{selected_course.$data.title}}

          <p v-text="selected_course.title"></p>
          {{app.selected_course.title}}
          {{title}}
          {{selected_course_name}}

          <p>{{selected_course_description}}</p>

        </div>
        <div class="row">
          <h4>Second Section</h4>
          <ul v-repeat="sections">
          </ul>
        </div>
     </div>
   </div>
