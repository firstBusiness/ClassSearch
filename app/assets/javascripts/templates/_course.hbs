<div class="animated fadeInLeftBig small-4 columns section-container" id="sections-section">
 <div class="row description-section">
    <h4>{{model.courseNum}} - {{model.title}} ({{model.creditsValue}})</h4>
    <span>Attributes:
      <span>
        {{#each attribute in model.attributes}}
        {{#link-to 'attribute.courses' attribute}}{{attribute.name}} ({{attribute.tag}}){{/link-to}}
        {{else}}
          None
        {{/each}}
      </span>
    </span>

    <p>{{model.courseDescription}}</p>
  </div>

  <div class="row sections-area">
  <h5>Course Sections <a class="fancy-link small-caps" {{action 'refreshSections' model}}>refresh</a></h5>

     <ul class="common-list section-list">

         {{#each section in sortedSections}}
         <li class='section-item'>
         <div class="details small-12">

           <span class="details-text">Section {{section.sectionNum}} &middot;

           {{#link-to 'timeslot.courses' section.timeslot}}
           {{section.timeslot.formatTimeSlot}}
           {{/link-to}} &middot;


           </span> <br>
           <span class="details-text">

            {{#if section.professor}}
           {{#link-to 'professor.courses' section.professor}}
           {{section.professor.fullName}}
           {{/link-to}}
           {{else}}
            Professor TBD
           {{/if}}

           &middot; {{section.location}} &middot; {{section.crn}}</span>  <br>

          <div class="seats-bar progress small-9 alert round">
           <span class="meter" {{bind-attr style=section.widthStyle}}></span>

           <span class="seats-text"><span class="seats-numbers">{{section.openSeats}} / {{section.maxSeats}}</span> seats left</span>

           {{#if section.inAgenda}}
           <a class="fancy-link small-caps" {{action 'removeSection' section}}> - remove from agenda</a>
           {{else}}
            <a class="fancy-link small-caps" {{action 'addSection' section}}>+ add to agenda</a>
           {{/if}}

          </div>



          </div>


         </li>

         {{/each}}

     </ul>


    {{outlet}}
  </div>
</div>

