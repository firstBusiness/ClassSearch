<div class="large-4 columns department-container">
  <h1>Professors</h1>
  <ul class="common-list prof-list">
    {{#each professor in controller}}
      <li class="prof-item">
        {{#link-to 'professor' professor tagName="li" class="prof-link"}}

        <span class="prof-link-text">{{professor.firstName}} {{professor.lastName}}</span><br>

        <span class="prof-text">teaching  {{professor.sectionsCount}} sections in {{professor.coursesCount}} courses</span>


        {{/link-to}}


      </li>
    {{/each}}
  </ul>
</div>

{{outlet}}

